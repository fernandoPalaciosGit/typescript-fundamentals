{
  "compilerOptions": {
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "build",
    "watch": true,
    // target: configure compilation scope
    "target": "ES2015",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "CommonJS"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}